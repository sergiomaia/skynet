<div class="modal fade" id="new-task-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content padding-30">
      <div class="modal-header">
        <h5>Adicionar nova tarefa</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body margin-top-30">
        <%= render 'tasks/form', task: @task %>
      </div>
    </div>
  </div>
</div>
