
<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :cpf %>
    <%= f.input :birthdate %>
    <%= f.input :phone %>
    <%= f.input :cellphone %>
    <%= f.simple_fields_for :packages do |p| %>
      <%= p.input :plan, collection: Package.plans %>
      <%= p.input :value %>
      <%= p.input :expires_at %>
      <%= p.input :status, collection: Package.statuses %>
      <%= p.input :protocol %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

