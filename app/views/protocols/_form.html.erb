<%= simple_form_for customer.protocols.build do |f| %>
	<%= f.error_notification %>
	<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

	<div class="form-inputs form-group">
		<%= f.input :number %>
	  <%= f.input :call_time %>
	  <%= f.input :customer_id, as: :hidden %>
	</div>

	<div class="form-actions form-group">
		<%= f.button :submit, 'Salvar protocolo', class: 'btn btn-success margin-top-20'%>
	</div>
<% end %>
